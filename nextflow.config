params.run_Extract_Barcode =  "yes"  //* @dropdown @options:"yes","no" @show_settings:"Extract_Barcode"

profiles {
  docker { 
        process.container = "dolphinnext/barcodeseq:1.0"
        docker.enabled = true 

  }
  singularity { 
        process.container = "dolphinnext/barcodeseq:1.0"
        singularity.enabled = true 
  }
}
